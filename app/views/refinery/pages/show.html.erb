<% if @page.id != @page.root.id %>
<%= render :partial => '/refinery/sub_menu',
             :locals => {
               :dom_id => 'submenu',
               :css => 'submenu',
               :roots => refinery_menu_pages.select{|p| p.parent_id == @page.parent_id}
} %>
<% end %>

<% content_for :body do %>
	<% @page.images.each_with_index do |image, index| %>
		<img src="<%= image.url%>" width="760"/>
	<% end unless @page.images.nil? %>

   <%=raw @page.content_for(:body) %>
<% end %>

<%= render '/refinery/content_page', :hide_sections => [:body_content_title] %>